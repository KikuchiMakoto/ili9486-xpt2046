/dts-v1/;
/plugin/;

/ {
    compatible = "allwinner,sun50i-h6";
    
    fragment@0 {
        target = <&r_pio>;
        __overlay__ {
            spi1_cs1_pin: spi1-cs1-pin {
                pins = "PL8";
                function = "gpio_out";
                output-high;
                drive-strength = <20>;
                bias-pull-up;
            };
            touch_pin: touch-pin {
                pins = "PL10";
                function = "gpio_in";
                bias-pull-up;
            };
        };
    };

    fragment@1 {
        target = <&spi1>;
        __overlay__ {
            status = "okay";
            cs-gpios = <&pio 7 3 0>, <&r_pio 0 8 1>;
            num-chipselects = <2>;
            #address-cells = <1>;
            #size-cells = <0>;
            
            lcd35: lcd35@0 {
                compatible = "ilitek,ili9486";
                reg = <0>;
                pinctrl-names = "default", "default";
                
                spi-max-frequency = <48000000>;
                txbuflen = <32768>;
                rotate = <90>;
                bgr = <0>;
                fps = <30>;
                buswidth = <8>;
                regwidth = <16>;
                   
                reset-gpios = <&pio 3 21 0>;  /* PD21, active high */
                dc-gpios = <&pio 3 16 0>;     /* PD16, active high */

                /* ILI9486 init code */
                init = <0x10000b0 0x00
                        0x1000011
                        0x20000ff
                        0x100003a 0x55
                        0x1000036 0x28
                        0x10000c2 0x44
                        0x10000c5 0x00 0x00 0x00 0x00
                        0x10000e0 0x0f 0x1f 0x1c 0x0c 0x0f 0x08 0x48 0x98 0x37 0x0a 0x13 0x04 0x11 0x0d 0x00
                        0x10000e1 0x0f 0x32 0x2e 0x0b 0x0d 0x05 0x47 0x75 0x37 0x06 0x10 0x03 0x24 0x20 0x00
                        0x10000e2 0x0f 0x32 0x2e 0x0b 0x0d 0x05 0x47 0x75 0x37 0x06 0x10 0x03 0x24 0x20 0x00
                        0x1000036 0x28
                        0x1000011
                        0x1000029>;
            };
            
            /* ADS7846 Touch Panel - CS1 (PL8) */
            lcd35_ts: lcd35-ts@1 {
                compatible = "ti,ads7846";
                reg = <1>;
                
                spi-max-frequency = <2000000>;
                
                /* irq pin: change from PD24 to PL10 */
		interrupt-parent = <&r_pio>;
		interrupts = <0 10 2>;
                pendown-gpio = <&r_pio 0 10 2>;

                ti,x-plate-ohms = /bits/ 16 <60>;
                ti,pressure-max = /bits/ 16 <255>;
            };
        };
    };

    __overrides__ {
        speed =         <&lcd35>,"spi-max-frequency:0";
        txbuflen =      <&lcd35>,"txbuflen:0";
        rotate =        <&lcd35>,"rotate:0";
        fps =           <&lcd35>,"fps:0";
        bgr =           <&lcd35>,"bgr:0";
        debug =         <&lcd35>,"debug:0";
        invertx =       <&lcd35_ts>,"touchscreen-inverted-x?";
        inverty =       <&lcd35_ts>,"touchscreen-inverted-y?";
        swapxy =        <&lcd35_ts>,"touchscreen-swapped-x-y?";
    };
};
